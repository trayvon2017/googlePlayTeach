<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <LinearLayout
        android:background="@drawable/list_item_bg_selector"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_detail_app_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tv_detail_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="谷歌电子市场"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/iv_detail_app_icon"
                />

            <RatingBar
                android:isIndicator="true"
                android:layout_marginTop="2dp"
                android:id="@+id/rb_detail_app_rate"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_below="@id/tv_detail_app_name"
                android:layout_toRightOf="@id/iv_detail_app_icon"
                android:rating="2.5"
                android:progressDrawable="@drawable/custom_rating_bar" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_left_info"
                android:layout_marginRight="50dp"

                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_detail_down_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下载量:1000万+"
                    android:textColor="#8000"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-05-02"
                    android:textColor="#8000"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_toRightOf="@id/ll_left_info"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_detail_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.0"
                    android:textColor="#8000"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_detail_app_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40.0mb"
                    android:textColor="#8000"
                    android:textSize="14sp" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#8000"/>



    </LinearLayout>

</LinearLayout>